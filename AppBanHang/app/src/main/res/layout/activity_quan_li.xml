<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.QuanLiActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        app:title="Quản lí"
        android:background="#6C6868"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/toobar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <soup.neumorphism.NeumorphCardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_width="100dp"
            android:id="@+id/layout_add"
            android:layout_height="100dp"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            style="@style/neumorphirmcard"
            app:neomorph_background_color="@color/background"
            app:neomorph_shadow_color="@color/shadow_color"
            app:neomorph_highlight_color="@color/highlight">

            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_add_24"/>
                <TextView
                    android:text="Thêm"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_width="100dp"
            android:id="@+id/layout_edit"
            android:layout_height="100dp"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            style="@style/neumorphirmcard"
            app:neomorph_background_color="@color/background"
            app:neomorph_shadow_color="@color/shadow_color"
            app:neomorph_highlight_color="@color/highlight">

            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_edit_24"/>
                <TextView
                    android:text="Sửa"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_width="100dp"
            android:id="@+id/layout_delete"
            android:layout_height="100dp"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            style="@style/neumorphirmcard"
            app:neomorph_background_color="@color/background"
            app:neomorph_shadow_color="@color/shadow_color"
            app:neomorph_highlight_color="@color/highlight">

            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_delete_24"/>
                <TextView
                    android:text="xóa"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>